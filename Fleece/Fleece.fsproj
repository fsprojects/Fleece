<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">SystemJson</Configuration>
    <TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
    <ProjectGuid>4eacc663-044c-49ae-946b-a966f57708cb</ProjectGuid>
    <OutputType>Library</OutputType>
    <RootNamespace>Fleece</RootNamespace>
    <Name>Fleece</Name>
    <Optimize>true</Optimize>
    <Tailcalls>true</Tailcalls>
    <WarningLevel>3</WarningLevel>
    <VersionPrefix>0.4.1</VersionPrefix>
    <VersionSuffix>alpha-1</VersionSuffix>
    <Version Condition=" '$(VersionSuffix)' != '' ">$(VersionPrefix)-$(VersionSuffix)</Version>
    <Version Condition=" '$(VersionSuffix)' == '' ">$(VersionPrefix)</Version>
    <AssemblyVersion>$(VersionPrefix).0</AssemblyVersion>
    <FileVersion>$(VersionPrefix).0</FileVersion>
    <RepositoryUrl>https://github.com/mausch/Fleece</RepositoryUrl>
    <PackageProjectUrl>https://github.com/mausch/Fleece</PackageProjectUrl>
    <PackageTags>json fsharp</PackageTags>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Description>JSON mapper for System.Json</Description>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'SystemJson' ">
    <AssemblyName>Fleece</AssemblyName>
    <DefineConstants>TRACE</DefineConstants>
    <OutputPath>bin\SystemJson\</OutputPath>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'FSharpData' ">
    <AssemblyName>Fleece.FSharpData</AssemblyName>
    <OutputPath>bin\FSharpData\</OutputPath>
    <DefineConstants>TRACE;FSHARPDATA</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="AssemblyInfo.fs" />
    <Compile Include="Fleece.fs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="FSharpPlus" Version="1.0.0-RC2" />
    <PackageReference Include="ReadOnlyCollectionExtensions" Version="1.2.0" />
    <PackageReference Include="ReadOnlyCollectionInterfaces" Version="1.0.0" />
    <PackageReference Include="FSharp.Data" Version="2.4.6" Condition=" '$(Configuration)' == 'FSharpData' " />
    <PackageReference Include="System.Json" Version="4.4.0" Condition=" '$(Configuration)' == 'SystemJson' " />
  </ItemGroup>
</Project>